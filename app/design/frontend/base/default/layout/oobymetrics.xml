<layout version="0.1.0">
    <default>
        <reference name="head" after="google_analytics">
            <block type="core/template" name="oobymetrics_tracking" template="oobymetrics/tracking.phtml" />
        </reference>
    </default>
    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="core/template" name="oobymetrics_checkout_onepage_success" template="oobymetrics/checkout/onepage/success.phtml"/>
        </reference>
    </checkout_onepage_success>
    <checkout_multishipping_success>
        <reference name="before_body_end">
            <block type="core/template" name="oobymetrics_checkout_multishipping_success" template="oobymetrics/checkout/multishipping/success.phtml"/>
        </reference>
    </checkout_multishipping_success>
</layout>
